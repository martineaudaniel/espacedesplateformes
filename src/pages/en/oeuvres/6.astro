---
// src/pages/works/artwork1.astro
import DefaultLayout from '../../../layouts/DefaultLayout.astro'
import { Pagination } from 'accessible-astro-components'
import PhotoSwipeGallery from '../../../components/PhotoSwipeGallery.astro'

// Get current page number from the filename (e.g., "1" for 1.astro)
const currentPage = parseInt(Astro.params.pageNumber || '6', 10)
const totalPages = 13 // Set this to the total number of pages you have
const galleryColumns = 1

// Pagination URLs
const firstPage = currentPage > 1 ? '/en/oeuvres/1' : null
const previousPage = currentPage > 1 ? `/en/oeuvres/${currentPage - 1}` : null
const nextPage = currentPage < totalPages ? `/en/oeuvres/${currentPage + 1}` : null
const lastPage = currentPage < totalPages ? `/en/oeuvres/${totalPages}` : null

const artwork = {
  title: 'Vidéos de YouTubers',
  subtitle: 'Joyce Cimper',
  description: `The soundscapes are audio arrangements that blend various sounds to recreate the atmosphere of iconic locations from a television series, such as the main characters' rooms or the café where they frequently gather. Dialogue excerpts, common in these audio creations, enhance the feeling of being with the protagonists, close enough to hear their conversations and take part in them. ASMR roleplay also allows for a special time spent with one’s favorite characters. ASMRtists portray fictional heroes in these creations, maintaining eye contact with viewers by looking directly at the camera lens. They speak directly to the audience, asking questions and reacting to their answers, always in a soft voice since the aim of ASMR is to induce a state of relaxation. Ultimately, ASMR roleplay aims not only to relax the audience but also to offer scenarios that extend the storylines developed within the series. Shifting videos, on the other hand, are designed to help individuals transition from the real world to the fictional universe of their choice. Precise instructions may be provided to the audience. Most videos, however, pair series music with subliminal images, allowing viewers to visualize the characters they will interact with and the spaces where they can live the adventures they desire once they reach the reality they envision.`,
  images: ['/assets/img/videos-de-youtubers/1.jpg', '/assets/img/videos-de-youtubers/2.jpg'],
}
---

<DefaultLayout title={artwork.title}>
  <section class="my-16">
    <div class="container mx-auto">
      <!-- Two-column layout: Image Gallery and Text Content -->
      <div class="flex gap-8">
        <!-- Left Half: Image Gallery -->
        <div class="flex-1 p-8">
          <PhotoSwipeGallery images={artwork.images} columns={galleryColumns} />
        </div>

        <!-- Right Half: Text Content -->
        <div class="flex-1 p-8">
          <div>
            <h1 class="mb-4 text-4xl font-bold">{artwork.title}</h1>
            <h3 class="mb-4 text-2xl font-semibold text-gray-400">{artwork.subtitle}</h3>
            <!-- Description Text -->
            <div class="whitespace-pre-wrap text-xl" set:html={artwork.description} />
          </div>
        </div>
      </div>

      <!-- Full-width YouTube Section -->
      <div class="mt-16">
        <h3 class="mb-4 text-3xl font-semibold">Videos</h3>

        <!-- AMBIANCE -->
        <div class="mb-8">
          <h4 class="text-2xl font-bold">AMBIANCE</h4>
          <div class="mt-4">
            <iframe
              class="aspect-video w-full"
              src="https://www.youtube.com/embed/aKugpx4_Wi0"
              title="Ambiance - Hannibal's Office"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
          <div class="mt-4">
            <iframe
              class="aspect-video w-full"
              src="https://www.youtube.com/embed/-GI5zOEO4w4"
              title="In the Impala with Sam and Dean"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
        </div>

        <!-- ASMR -->
        <div class="mb-8">
          <h4 class="text-2xl font-bold">ASMR</h4>
          <div class="mt-4">
            <iframe
              class="aspect-video w-full"
              src="https://www.youtube.com/embed/1xTYoO_Sk0U"
              title="Daryl Dixon Saves You ASMR"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
          <div class="mt-4">
            <iframe
              class="aspect-video w-full"
              src="https://www.youtube.com/embed/3HGKju4kUNc"
              title="Dunder Mifflin, This is Pam!"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
        </div>

        <!-- SHIFTING -->
        <div class="mb-8">
          <h4 class="text-2xl font-bold">SHIFTING</h4>
          <div class="mt-4">
            <iframe
              class="aspect-video w-full"
              src="https://www.youtube.com/embed/ktYhy5PyjhI"
              title="Reality shift to Euphoria subliminal"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
          <div class="mt-4">
            <iframe
              class="aspect-video w-full"
              src="https://www.youtube.com/embed/OVFv4KrzQYs"
              title="SQUID GAME - Méditation guidée"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pagination -->
  <div class="mt-12 grid place-content-center">
    <Pagination
      firstPage={firstPage}
      previousPage={previousPage}
      nextPage={nextPage}
      lastPage={lastPage}
      currentPage={currentPage}
      totalPages={totalPages}
    />
  </div>
</DefaultLayout>
